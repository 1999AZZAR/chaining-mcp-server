# Example docker compose override file for development
# Copy this to docker-compose.override.yml and customize as needed

services:
  chaining-mcp-server:
    # Override for development
    environment:
      - NODE_ENV=development
      - DEBUG=*
    
    # Mount source code for live development
    volumes:
      - ./src:/app/src:ro
      - ./package.json:/app/package.json:ro
      - ./tsconfig.json:/app/tsconfig.json:ro
    
    # Override command for development
    command: ["npm", "run", "dev"]
    
    # Remove resource limits for development
    deploy:
      resources:
        limits: {}
        reservations: {}
    
    # Expose ports for debugging
    ports:
      - "9229:9229"  # Node.js debug port
      - "3000:3000"  # Application port (if HTTP transport is added)
